
CC = gcc
SRC = .c
OBJ = .o
NAME = holberton
CFLAGS = -Wall -Werror -Wextra -pedantic

all: main$(OBJ) holberton$(OBJ)
	$(CC) main$(OBJ) holberton$(OBJ) -o $(NAME)

main_o: main$(SRC) m.h
	$(COMPILE.c) -c -o main$(OBJ) main$(SRC)

hol_o: holberton$(SRC)
	$(COMPILE.c) -c -o hol_o holberton$(SRC)


clean:
	$(RM) *~ $(NAME)
	
oclean:
	$(RM) main_o hol_o

fclean: clean oclean

re: oclean all
