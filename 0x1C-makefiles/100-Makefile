
CC = gcc
SRC = .c
OBJ = .o
NAME = holberton
CFLAGS = -Wall -Werror -Wextra -pedantic

all: main$(OBJ) holberton$(OBJ)
	$(CC) main$(OBJ) holberton$(OBJ) -o $(NAME)

main$(OBJ): main$(SRC) m.h
	$(COMPILE.c) -c -o main$(OBJ) main$(SRC)

holberton$(OBJ): holberton$(SRC)
	$(COMPILE.c) -c -o holberton$(OBJ) holberton$(SRC)

clean:
	$(RM) *~ $(NAME)
	
oclean:
	$(RM) main$(OBJ) holberton$(OBJ)

fclean: clean oclean

re: oclean all
