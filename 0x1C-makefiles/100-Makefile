
CC = gcc
SRC = .c
OBJ = .o
NAME = holberton
CFLAGS = -Wall -Werror -Wextra -pedantic

all: main$(OBJ) holberton$(OBJ)
	$(CC) main$(OBJ) holberton$(OBJ) -o $(NAME)

main$(OBJ): main$(SRC) m.h
	$(COMPILE.c) main$(SRC) -o main$(OBJ)

holberton$(OBJ): holberton$(SRC)
	$(COMPILE.c) holberton$(SRC) -o holberton$(OBJ)

clean:
	$(RM) *~ $(NAME)
	
oclean:
	$(RM) main$(OBJ) holberton$(OBJ)

fclean: clean oclean
